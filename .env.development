# Development Environment Configuration
# This file contains safe defaults for development

FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=dev_secret_key_not_for_production
JWT_SECRET_KEY=dev_jwt_secret_not_for_production
JWT_ACCESS_TOKEN_EXPIRES=3600

# Development database
POSTGRES_DB=tradingbot_dev
POSTGRES_USER=tradingbot
POSTGRES_PASSWORD=tradingpass
DATABASE_URL=postgresql://tradingbot:tradingpass@postgres:5432/tradingbot_dev

# Development Redis
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=redispass

# Development CORS (allow all local origins)
CORS_ORIGINS=http://localhost:9765,http://127.0.0.1:9765,http://localhost:3000,http://localhost:8888

# Development logging
LOG_LEVEL=DEBUG
LOG_FILE=/app/logs/trading_bot_dev.log

# Development monitoring
GRAFANA_ADMIN_PASSWORD=admin123

# Development cache settings (shorter timeouts for testing)
CACHE_TIMEOUT=60
REALTIME_CACHE_TIMEOUT=5
STATIC_CACHE_TIMEOUT=300

# Jupyter development
JUPYTER_TOKEN=tradingbot123

# Debug configuration
DEBUG_PORT=5678
FLASK_RELOAD=1

# Development Alpaca (use paper trading)
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Development trading limits (safer defaults)
MAX_POSITION_SIZE=100
MAX_DAILY_LOSS=50
STOP_LOSS_PERCENTAGE=1.0