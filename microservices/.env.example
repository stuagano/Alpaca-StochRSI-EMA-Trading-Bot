# Trading System Environment Variables

# Alpaca API Configuration
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Service URLs (for development)
POSITION_SERVICE_URL=http://localhost:6001
TRADING_SERVICE_URL=http://localhost:6002
SIGNAL_SERVICE_URL=http://localhost:6003
RISK_SERVICE_URL=http://localhost:6004
MARKET_DATA_SERVICE_URL=http://localhost:6005

# Database URLs
POSITION_DB_URL=sqlite+aiosqlite:///./data/position_management.db
TRADING_DB_URL=sqlite+aiosqlite:///./data/trading_execution.db
SIGNAL_DB_URL=sqlite+aiosqlite:///./data/signal_processing.db
RISK_DB_URL=sqlite+aiosqlite:///./data/risk_management.db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json