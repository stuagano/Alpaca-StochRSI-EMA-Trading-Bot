# Trading Bot Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Flask Application Configuration
FLASK_SECRET_KEY=your_super_secret_key_here_minimum_32_characters_long
FLASK_ENV=development
FLASK_DEBUG=False

# Alpaca Trading API Credentials
# Get these from your Alpaca account dashboard
APCA_API_KEY_ID=your_alpaca_api_key_id_here
APCA_API_SECRET_KEY=your_alpaca_api_secret_key_here
APCA_BASE_URL=https://paper-api.alpaca.markets

# JWT Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters_long
JWT_ACCESS_TOKEN_EXPIRES=3600

# CORS Configuration
# Comma-separated list of allowed origins for CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:9765,http://127.0.0.1:9765

# Database Configuration (if using external database)
DATABASE_URL=sqlite:///trading_data.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=flask.log

# Trading Bot Configuration
DEFAULT_PAPER_TRADING=True
DEFAULT_RISK_PERCENTAGE=1.0
DEFAULT_MAX_POSITIONS=5

# API Rate Limiting
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=3600

# Security Settings
SESSION_TIMEOUT=1800
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=300